<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('partials/links.ejs') %>
    <link rel="stylesheet" href="/css/form-submit.css">
    <title>Home</title>
</head>
<body>
  <%- include ('partials/navigation.ejs') %>
  <% if(role === "Student") { %>
    <% if (submissions.length > 0) { %>
      <div class="container">
        <% for (let i = 0; i < submissions.length; i++) { %>
                <article class="card">
                  <div class="form-control card-header">
                    <% if(!submissions[i].title) { %>
                      <h1 class="form__title">No title yet</h1>
                      <% } else { %>
                        <h1 class="form__title"><%= submissions[i].title %></h1>
                    <% } %>
                  </div>
                  <div class="form-control">
                    <h4>Status: <%= submissions[i].status %></h4>
                  </div>
                  <div class="form-control" id="viewer-<%= i %>">
                    <iframe src="<%= submissions[i].filePath %>" frameborder="0" width="70%" height="500px"></iframe>
                  </div>
                  <div class="card-actions">
                    <% if(role === "Faculty") { %>
                    <button>Approve</button>
                    <% } %>
                  </div>
                </article>
        <% } %>
      </div>
    <% } %>
  <% } %>
  <script src="/js/main.js"></script>
  
</body>
</html>