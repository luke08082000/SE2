<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href = "/css/navigation.css">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">  
    <link rel="stylesheet" href="/css/roles.css">
    <link rel="stylesheet" href="/css/form-submit.css">
    <title>Home</title>
</head>
<body>
  <%- include ('../partials/navigation.ejs') %>
  <div class="container">
    <div class="header">
        <h1>Faculty Roles</h1>
    </div>
    <div class="body">
        <div class="roles">
        <h4>Faculty Members with roles:</h4>
        <form action="/faculty/activities/remove" method="POST">
            <% if(facultyMembers.length > 0) { %>
            <% facultyMembers.forEach((member, i) => { %>
                    <% if (userFaculty[i].role == 'course-facilitator') { %>
                        <p><%= userFaculty[i].role + ' ' + userFaculty[i].section %></p>
                        <% } else { %>
                            <p><%= userFaculty[i].role %></p>
                            <% } %>
                            <p><%= member.firstName + ' ' + member.lastName %></p>
                            <button value="<%= userFaculty[i].id %>" name="facultyId" type="submit">Remove</button>
                            <br>
                <% }) %>
            <% } %>
        </form>
        
    </div>
    <div class="members">
        <h4>All Faculty Members</h4>
        <% if(faculty.length > 0) { %>
            <% faculty.forEach(member => { %>
                <p>ID: <%= member.id %></p>
                <p><%= member.firstName + ' ' + member.lastName %></p>
                <br>
            <% }) %>
        <% } %>
    </div>
    <div class="assign">
        <form action="/faculty/activities/roles" method="POST">
            <div class="form-control">
                <h4>Course Coordinator</h4>
                <input type="text" name="userId">
                <button value="course-coordinator" name="role" type="submit">Assign Role</button>
            </div>
            <div class="form-control">
                <h4>Course Facilitator</h4>
                <input type="text" name="userId">
                <label for="section">Section: </label>
                <select name="section" id="section">
                  <option value="isa">IS A</option>
                  <option value="isb">IS B</option>
                </select>
                <button value="course-facilitator" name="role" type="submit">Assign Role</button>
            </div>
            <div class="form-control">
                <h4>Track Head</h4>
                <input type="text" name="userId">
                <button value="track-head" name="role" type="submit">Assign Role</button>
            </div>
        </form>
    </div>
    </div>
    


</div>

</body>
