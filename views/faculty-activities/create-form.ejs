<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href = "/css/navigation.css">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">  
    <link rel="stylesheet" href="/css/form-create.css">
    <title>Home</title>
</head>
<body>
  <%- include ('../partials/navigation.ejs') %>
    <div class="container">
      <div class="header">
        <h1>Create Submission Forms</h1>
      </div>
        <form action="/faculty/activities/create-form" method="POST" >
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="4"></textarea>
          </div>
          <div class="form-group">
            <label for="description">Needs Approval</label>
            <input type="checkbox" name="needsApproval">
          </div>
          <!-- <div class="form-group">
            <label for="deadline">Deadline (Date and Time)</label>
            <input type="datetime-local" class="form-control" id="deadline" name="deadline" required>
          </div> -->
          <div class="form-group">
          </div>
          <button type="submit" value="<%= section %>" name="section" class="btn btn-primary">Create</button>
        </form>

        <div class="form-list">
          <div class="header-2">
            <h2>Forms Created</h2>
          </div>
          <% if(forms.length > 0) { %>
            <% forms.forEach(form => { %>
          <% if(form.batchId == activeBatch) { %>
              <div  class="form-control-2 flex">
                <form action="/faculty/activities/form-view" method="GET" class="flex s">
                  <h4><%= form.title %></h4>
                  <button value="<%= form.id %>" type="submit" name="formId">View</button>
                </form>
              </div>
              <% } %>
            <% }) %>
          <% } %>
        </div>
      </div>

  </body>
