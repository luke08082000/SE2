<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href = "/css/auths.css">
<head>
    <title>Register</title>
</head>
<body>
    <header>
        <div class="header">
            <img src="/img/ust_logo_name.png" id="ust-logo"/>
            <img src="/img/IICS_Logo.png" id="iics-logo"/>
        <div>
    </header>
         <center>
            <h1>Register as Faculty </h1>
        </center>
    <div class="container center">
        <div class="grayline"></div>
        <% if(errorMessage) { %>
            <% console.log(errorMessage) %>
            <center><div><%= errorMessage %></div></center>
        <% } %>
        <form action="/auth/register" method="POST">
            <div class="form-control">
                <h4>First Name</h4>
                <input type="text" name="firstName">
            </div>
            <div class="form-control">
                <h4>Last Name</h4>
                <input type="text" name="lastName">
            </div>
            <div class="form-control">
                <h4>Email Address</h4>
                <input type="email" name="email">
            </div>
            <div class="form-control">
                <h4>Employee ID</h4>
                <input type="number" name="employeeId">
            </div>
            <div class="grayline1"></div>
            <div class="form-control">
                <h4>Password</h4>
                <input type="password" name="password">
            </div>
            <div class="form-control">
                <h4>Confirm Password</h4>
                <input type="password" name="confirmPassword">
            </div>
            <div class="form-control">
                <button type="submit" class="button">Register</button>
                <p>Already have an account? <a href="/auth/login">Login</a></p>
                <input type="hidden" value="faculty" name="role">
            </div>
        </form>

    </div>
         
                   
</body>
</html>